<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.RegisterActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:id="@+id/tv_title"
            android:text="Register"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tvlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textStyle="bold"
        android:text="Let's Register"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/black"
        android:layout_below="@id/toolbar"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvlogin"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Welcome to the Book store"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_height="46dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_ed_white"
        android:layout_below="@id/tv_desc"
        android:hint="Username..."
        android:textColorHint="@color/black"
        android:paddingStart="8dp"
        android:id="@+id/ed_username"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/black"
        android:background="@drawable/bg_ed_white"
        android:layout_below="@id/ed_username"
        android:layout_marginTop="32dp"
        android:hint="Password..."
        android:textColorHint="@color/black"
        android:paddingStart="8dp"
        android:inputType="textPassword"
        android:id="@+id/ed_password"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_ed_white"
        android:textColor="@color/black"
        android:layout_below="@id/ed_password"
        android:layout_marginTop="32dp"
        android:hint="Fullname..."
        android:textColorHint="@color/black"
        android:paddingStart="8dp"
        android:id="@+id/ed_fullname"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_register"
        android:layout_below="@id/ed_fullname"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:text="Register"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/bg_btn_black"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You already have an account ?"
        android:layout_below="@id/btn_register"
        android:layout_marginLeft="90dp"
        android:textColor="@color/black"
        android:layout_marginTop="32dp"/>
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Log in"
        android:textColor="@color/purple_700"
        android:layout_toRightOf="@id/tv"
        android:layout_below="@id/btn_register"
        android:layout_marginTop="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/tv_login"
        android:textColor="@color/black"
        android:text="Thank you for signing up for an account"
        android:layout_marginTop="64dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>